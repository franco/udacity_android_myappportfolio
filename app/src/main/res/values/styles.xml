<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <color name="udacity_orange_color">#F08C35</color>

    <!-- Stolen from http://discussions.udacity.com/t/creating-android-buttons-of-same-size/20078/8?u=usershell -->
    <style name="launcherButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">#F08C35</item>
        <item name="android:borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="capstoneButtonStyle" parent="launcherButtonStyle">
        <item name="android:background">#D73357</item>
    </style>



</resources>
